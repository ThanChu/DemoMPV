<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_movie_logo_img"
        android:layout_width="@dimen/width_logo_movie"
        android:layout_height="@dimen/height_logo_movie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_movie_logo_img"
        android:layout_alignTop="@+id/item_movie_logo_img"
        android:layout_toRightOf="@+id/item_movie_logo_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_movie_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_movie_des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>